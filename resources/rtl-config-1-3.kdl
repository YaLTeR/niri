// Test configuration for RTL with 1/3 tile width
// Each terminal opened with Ctrl+T spawns an Alacritty terminal
// Default tile width is 1/3 of screen width
// RTL mode: columns are arranged right-to-left, new windows spawn on the left

// Input device configuration.
input {
    keyboard {
        xkb {
            // You can set rules, model, layout, variant and options.
            // For more information, see xkeyboard-config(7).
        }
        // Enable numlock on startup
        numlock
    }

    touchpad {
        tap
        natural-scroll
    }

    mouse {
        natural-scroll
    }

    tablet {
        // No tablet settings by default
    }

    touch {
        // No touch settings by default
    }
}

// Output configuration.
// Find the full list of options on the wiki:
// https://yalter.github.io/niri/Configuration:-Output
output "eDP-1" {
    // Output settings go here.
    // You can change scale (1.0 by default), transform, etc.
}

// Other outputs will be configured automatically.
// You can also configure outputs by name, connector, or make.
// See the wiki for more information:
// https://yalter.github.io/niri/Configuration:-Output

// Settings that influence how windows are positioned and sized.
layout {
    // Set gaps around windows in logical pixels.
    gaps 16

    // RTL (right-to-left) layout
    // Columns are arranged right-to-left, new windows spawn on the left
    right-to-left
    
    // When to center a column when changing focus.
    center-focused-column "never"

    // Custom preset widths for Mod+R - set to only 1/3 width for testing
    preset-column-widths {
        // Set width to exactly 1/3 of the output width
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    // Set default column width to 1/3 of the output width
    default-column-width { proportion 0.33333; }

    // Focus ring and border settings
    focus-ring {
        off
    }

    border {
        off
    }
}

// This option will also fix border/focus ring drawing behind some semitransparent windows.
// After enabling or disabling this, you need to restart the apps for this to take effect.
prefer-no-csd

// No startup processes for clean testing
// spawn-at-startup "waybar"

// Animation settings.
// The wiki explains how to configure individual animations:
// https://yalter.github.io/niri/Configuration:-Animations
animations {
    // Uncomment to turn off all animations.
    // off

    // Slow down all animations by this factor. Values below 1 speed them up instead.
    // slowdown 3.0
}

// Key bindings.
// Find the full list of actions on the wiki:
// https://yalter.github.io/niri/Configuration:-Key-Bindings
binds {
    // Mod-Shift-/, which is usually the same as Mod-?,
    // shows a list of important hotkeys.
    Mod+Shift+Slash { show-hotkey-overlay; }

    // Terminal launcher - Ctrl+T spawns Alacritty
    Ctrl+T hotkey-overlay-title="Open Terminal: alacritty" { spawn "alacritty"; }
    
    // Alternative with Mod+T for consistency
    Mod+T hotkey-overlay-title="Open Terminal: alacritty" { spawn "alacritty"; }

    // Mod+R - switch preset column width (cycles through 1/3 presets)
    Mod+R { switch-preset-column-width; }

    // Mod+F - maximize column to full width
    Mod+F { maximize-column; }

    // Basic window management
    Mod+Q { close-window; }

    // Navigation (note: in RTL, left/right are swapped logically)
    Mod+Left  { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+H     { focus-column-left; }
    Mod+L     { focus-column-right; }
    Mod+J     { focus-window-down; }
    Mod+K     { focus-window-up; }

    // Move windows
    Mod+Ctrl+Left  { move-column-left; }
    Mod+Ctrl+Right { move-column-right; }
    Mod+Ctrl+Down  { move-window-down; }
    Mod+Ctrl+Up    { move-window-up; }
    Mod+Ctrl+H     { move-column-left; }
    Mod+Ctrl+L     { move-column-right; }
    Mod+Ctrl+J     { move-window-down; }
    Mod+Ctrl+K     { move-window-up; }

    // Workspace navigation
    Mod+Page_Down { focus-workspace-down; }
    Mod+Page_Up   { focus-workspace-up; }
    Mod+U         { focus-workspace-down; }
    Mod+I         { focus-workspace-up; }

    // Move columns between workspaces
    Mod+Ctrl+Page_Down { move-column-to-workspace-down; }
    Mod+Ctrl+Page_Up   { move-column-to-workspace-up; }
    Mod+Ctrl+U         { move-column-to-workspace-down; }
    Mod+Ctrl+I         { move-column-to-workspace-up; }

    // Workspace management
    Mod+Shift+Page_Down { move-workspace-down; }
    Mod+Shift+Page_Up   { move-workspace-up; }
    Mod+Shift+U         { move-workspace-down; }
    Mod+Shift+I         { move-workspace-up; }

    // Focus specific workspaces
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+0 { focus-workspace 10; }

    // Move columns to specific workspaces
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }
    Mod+Ctrl+0 { move-column-to-workspace 10; }

    // Column management
    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }
    Mod+Comma  { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    // Window height management
    Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R { reset-window-height; }

    // Fullscreen window
    Mod+Shift+F { fullscreen-window; }

    // Expand column
    Mod+Ctrl+F { expand-column-to-available-width; }

    // Center column
    Mod+C { center-column; }
    Mod+Ctrl+C { center-visible-columns; }

    // Column width adjustments
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }

    // Window height adjustments
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Floating windows
    Mod+V       { toggle-window-floating; }
    Mod+Shift+V { switch-focus-between-floating-and-tiling; }

    // Toggle tabbed display
    Mod+W { toggle-column-tabbed-display; }

    // Power and session management
    Mod+Shift+E { quit; }
    Super+Alt+L { spawn "swaylock"; }

    // Screenshot
    Print { spawn "grim"; }
    Ctrl+Print { spawn "grim -g \"$(slurp)\""; }
    Alt+Print { spawn "grim - | wl-copy"; }
    Ctrl+Alt+Print { spawn "grim -g \"$(slurp)\" - | wl-copy"; }

    // Overview
    Mod+O { toggle-overview; }
}
