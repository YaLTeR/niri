// Base config for golden tests - fixed 400px width (RTL)
input {
    keyboard {
        xkb {
            layout "us"
        }
    }
}
output "HEADLESS-1" {
    mode "1280x720"
}
layout {
    gaps 0
    right-to-left
    center-focused-column "never"
    preset-column-widths {
        fixed 400
        fixed 800
        fixed 1200
    }
    default-column-width { fixed 400; }
    focus-ring {
        off
    }
    border {
        width 4
        active-color "#ffc87f"
        inactive-color "#505050"
    }
}
prefer-no-csd
animations {
    off
}
binds {
    Mod+T hotkey-overlay-title="Open a Terminal: alacritty" { spawn "alacritty"; }
    Mod+R hotkey-overlay-title="Resize Column" { switch-preset-column-width; }
    Mod+F hotkey-overlay-title="Maximize Column" { maximize-column; }
    Mod+Q hotkey-overlay-title="Close Window" { close-window; }
    Mod+Shift+E hotkey-overlay-title="Exit Niri" { quit; }
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    
    // Arrow key navigation (Alt+Arrow in nested compositor)
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }
}
